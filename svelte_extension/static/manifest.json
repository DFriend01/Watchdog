{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/content.js"]
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs"
    ],  
    "action": {
        "name": "Hello Extensions",
        "default_title": "Hello Extension",
        "default_popup": "popup/popup.html"
    }
}
